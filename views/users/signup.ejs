<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="container mt-5 p-4">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <h3 class="border-bottom border-2 border-secondary mb-4 pb-2">
                        SignUp / Register
                    </h3>
                    <form method="post" action="/signup" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label class="form-label fw-medium" for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" required autocomplete="off" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-medium" for="username">Username</label>
                            <input type="text" class="form-control" name="username" id="username" required autocomplete="off"/>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-medium" for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" required  autocomplete="off"/>
                        </div>
                        <button class=" btn btn-outline-primary">SignUp</button>
                    </form>
                </div>
                <div class="col-md-4"></div>
            </div>
        </div>
    </body>