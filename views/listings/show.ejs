<%- layout("/layouts/boilerplate.ejs") %>

   <body>
      <div class="container-lg">
         <div class="row mb-3">
            <div class="col-md-6">
               <div class="card ">
                  <img src="<%= data.image.url %>" class=" rounded-4" style="width:100%; max-height:30rem;"
                     alt="Listing Image">
               </div>
               <p class="fst-italic fw-bold text-danger mb-5 text-end"><span>Owned By : </span>
                  <%= data.owner.username %>
               </p>
            </div>
            <div class="col-md-6">
               <div class="card p-3 parent">
                  <p class="card-title h2 fw-bold pb-3 border-bottom border-dark">
                     <%= data.title %>
                  </p>
                  <p class="card-text  mt-1  h5 fw-normal ">
                     <%= data.description %>
                  </p>
                  <p class="card-text fst-italic mt-3 h6 ">
                     <i class="bi bi-geo-alt-fill"></i>
                     <%= data.location %>
                  </p>
                  <p class="card-text fst-italic  h6 ">
                     <i class="fa-solid fa-earth-americas"></i>
                     <%= data.country %>
                  </p>
                  <p class="card-text h4 mt-3">
                     <%= data.price ? data.price.toLocaleString("en-IN", {style : "currency" , currency :"INR"})
                        : "-----" %> /day
                  </p>
                  <% if(currUser && currUser._id.equals(data.owner._id)){%>
                     <div class="d-flex gap-2 mt-3">
                        <form method="get" action="/listings/<%= data.id %>/edit">
                           <button class="btn btn-success ">Edit</button>
                        </form>

                        <form method="post" action="/listings/<%= data._id %>?_method=DELETE">
                           <button class="btn btn-danger">Delete</button>
                        </form>
                     </div>
                     <% } %>
               </div>
            </div>
         </div>
         <hr>
         <% if(currUser){ %>
            <div class="row">
               <h4>Leave a Reviews</h4>
               <div class="col-md-4 mb-5">
                  <form action="/listings/<%= data.id %>/reviews" method="post"
                     class="needs-validation border rounded-3 p-3" novalidate>
                     <label class="form-label" for="rating">Rating : </label>
                     <fieldset class="starability-slot" id="rating">
                        <input type="radio" id="no-rate" class="input-no-rate" name="Review[rating]" value="1"
                           checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="Review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="Review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="Review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="Review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="Review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                     </fieldset>
                     <div>
                        <label class="form-label " for="Comment">Comments</label>
                        <textarea class="form-control" rows="5" id="Comment" name="Review[comments]"
                           placeholder="write your comments here..." required></textarea>
                        <div class="invalid-feedback text-end">*Please Enter something...</div>
                     </div>
                     <button type="submit" class="btn btn-outline-secondary mt-3">Submit</button>
                  </form>
               </div>
               <hr>
            </div>
            <% } %>
               <div>
                  <h4>All Reviews</h4>
                  <div class="row mb-5">
                     <% for(review of data.reviews){ %>
                        <div class="col-md-3 p-2 m-3 border border-2 rounded-3">
                           <h5>@ <%=review.author.username %></h5>
                           <p class="starability-result " data-rating="<%= review.rating %>"></p>
                           <p>
                              <%= review.comments %>
                           </p>
                           <form method="post"
                              action="/listings/<%= data.id %>/reviews/<%= review.id %>?_method=DELETE">
                              <button class="btn btn-sm btn-outline-danger">Remove</button>
                           </form>
                        </div>
                        <% } %>
                  </div>
               </div>
      </div>
   </body>